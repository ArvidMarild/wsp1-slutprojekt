<form action="/beats/<%= @beats["id"] %>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="authenticity_token" value="<%= session[:csrf] %>">

  <label for="genre" class="form-label">Genre</label>
  <input value="<%= @beats['genre'] %>" type="text" id="genre" name="genre" class="form-input" required>

  <label for="bpm" class="form-label">BPM</label>
  <input value="<%= @beats['bpm'] %>" type="text" id="bpm" name="bpm" class="form-input" required>

  <label for="key" class="form-label">Key</label>
  <select name="key" id="key" class="form-select" required>
    <% keys = ["C", "C#", "D", "D#", "E", "F", "F#", "G", "G#", "A", "A#", "B", 
               "Cm", "C#m", "Dm", "D#m", "Em", "Fm", "F#m", "Gm", "G#m", "Am", "A#m", "Bm"] %>
    <% keys.each do |key| %>
      <option value="<%= key %>" <%= "selected" if @beats["key"] == key %>><%= key %></option>
    <% end %>
  </select> <br>

  <label for="name" class="form-label">Name your track</label>
  <input value="<%= @beats['name'] %>" type="text" id="name" name="name" class="form-input" required>

  <label for="price" class="form-label">Price</label>
  <input value="<%= @beats['price'] %>" type="text" id="price" name="price" class="form-input" required>

  <input type="submit" value="Update" class="submit-btn">
</form>
